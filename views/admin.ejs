<!DOCTYPE html>
<html lang="sv">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration: Produkter</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        header {
            background-color: #333;
            color: white;
            padding: 10px;
        }

        header h1,
        header h2 {
            margin: 0;
        }

        main {
            flex: 1;
            display: flex;
        }

        .sidebar {
            width: 10%;
            background-color: #ddd;
            padding: 10px;
            box-sizing: border-box;
        }

        .sidebar h2 {
            font-size: 18px;
            margin: 0;
        }

        .content {
            width: 80%;
            padding: 20px;
            background-color: white;
            border-radius: 5px;
            text-align: center;
        }

        .button {
            margin: 5px;
            padding: 10px;
            color: white;
            border: none;
            border-radius: 5px;
            text-align: end;

        }

        button:hover {
            background-color: #3b97fa;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table,
        th,
        td {
            border: 1px solid #ccc;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
        }

        /* Media Queries */
        @media (max-width: 768px) {
            main {
                flex-direction: column;
            }

            .sidebar {
                width: auto;
                text-align: center;
            }

            .content {
                width: auto;
                margin-top: 10px;
            }
        }
    </style>
</head>

<body>
    <header>
        <h1>Administration</h1>
    </header>
    <main>
        <aside class="sidebar">
            <h2>Produkter</h2>
        </aside>
        <section class="content">
            <h2>Produkter</h2>
            <div class="button">
                <button id="load-products-button">Ladda produkter</button>
                <a href="/admin/products/new"><button>Ny produkt</button></a>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>SKU</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product=> { %>
                        <tr>
                            <td>
                                <%= product.name %>
                            </td>
                            <td>
                                <%= product.sku %>
                            </td>
                            <td>
                                <%= product.price %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>


        </section>
    </main>
    <script src="/scripts/listProducts.js"></script>

</body>

</html>